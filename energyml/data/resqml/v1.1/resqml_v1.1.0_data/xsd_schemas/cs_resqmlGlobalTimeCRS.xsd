	<xsd:complexType name="cs_resqmlGlobalTimeCRS">
		<xsd:annotation>
			<xsd:documentation>Defines a 1D Vertical Time Coordinate Reference System (CRS) relative to the global vertical (length) CRS. 
			The label associated with the axis on this system is Z.</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element name="verticalOrigin" type="xsd:double" minOccurs="1" maxOccurs="1">
				<xsd:annotation>
					<xsd:documentation>The vertical location of the origin of this local system in the global vertical (length) CRS.
					The unit of measure is defined by the unit of measure for the global vertical CRS.</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
			<xsd:element name="timeUnit" type="resqml:VerticalTimeUnit" minOccurs="1" maxOccurs="1">
				<xsd:annotation>
					<xsd:documentation>Defines the unit of measure of all vertical (seismic two-way) time coordinates.
					The direction is positve when traveling toward the center of the Earth.</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>
