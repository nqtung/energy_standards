	<xsd:complexType name="cs_resqmlRefTimeStep">
		<xsd:annotation>
			<xsd:documentation>Points to a single timestamp within a timestep list.</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element name="timeStepList" type="resqml:refGlobalNameString" minOccurs="1" maxOccurs="1">
				<xsd:annotation>
					<xsd:documentation>A pointer to a time step list.</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
			<xsd:element name="timeIndex" type="resqml:nonNegativeShort" minOccurs="1" maxOccurs="1">
				<xsd:annotation>
					<xsd:documentation>The zero-based index of the timestamp within the list.</xsd:documentation>
				</xsd:annotation>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>
	<!--                                                     -->
</xsd:schema>
