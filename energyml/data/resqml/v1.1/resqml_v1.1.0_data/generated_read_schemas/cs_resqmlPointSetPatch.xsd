   <xsd:include schemaLocation="cs_resqmlPoint3dSet.xsd" />
   <xsd:include schemaLocation="cs_resqmlHdfGroup.xsd" />
   <xsd:include schemaLocation="cs_resqmlPropertySet.xsd" />
